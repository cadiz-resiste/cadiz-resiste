---
import CadizSkyLineIcon from "../components/Icons/CadizSkyLineIcon.astro";
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Cadiz Resiste | Inicio">
    <main class="">
        <div class="welcome-component fluid-container">
            <CadizSkyLineIcon />
            <div class="separator"></div>
        </div>

        <div class="other-component fluid-container"></div>
    </main>
</MainLayout>

<style lang="scss">
    main {
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 1rem;
        background-color: var(--primary-green);

        .welcome-component {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            position: relative;

            .separator {
                position: relative;
                background: #2c3e50;
                height: 0rem;
                margin-top: 5rem;

                &:before {
                    content: "";
                    position: absolute;
                    bottom: 0;
                    top: 0;
                    width: 0;
                    height: 0;
                    border-style: solid;
                    border-width: 8px 8px 0 8px;
                    border-color: white transparent transparent transparent;
                    left: 50%;
                    transform: translateX(-50%) translateY(100%);
                    animation: floating 1s cubic-bezier(0.66, -0.16, 0.36, 1)
                        infinite;
                }

                @keyframes floating {
                    0% {
                        transform: translate(0, 0px);
                    }
                    50% {
                        transform: translate(0, 10px);
                    }
                    100% {
                        transform: translate(0, -0px);
                    }
                }
            }
        }

        .other-component {
            background-color: white;
            height: 30rem;
        }
    }
</style>
