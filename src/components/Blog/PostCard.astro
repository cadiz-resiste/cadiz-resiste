---
import type { BlogPost } from "../../lib/contentful";
import { type Entry, type Asset } from "contentful";

import { documentToHtmlString } from "@contentful/rich-text-html-renderer";
import truncate from "html-truncate";

interface Props {
    post: Entry<BlogPost, undefined, string>;
}

const { post } = Astro.props;
const image = post.fields.image as Asset;

const htmlContent = documentToHtmlString(post.fields.content);
const truncatedHtml = truncate(htmlContent, 178);
---

<section class="post-card">
    <div class="post-card-img">
        <a href={`blog/posts/${post.fields.slug}`}>
            <img src={`https:${image.fields.file.url}?w=500`} alt="" />
        </a>
    </div>
    <div class="post-card-info">
        <a href={`blog/posts/${post.fields.slug}`}>
            <h3>{post.fields.title.toLocaleUpperCase()}</h3>
        </a>
        <p class="post-card-date">
            {new Date(post.fields.date).toLocaleDateString("es-ES")}
        </p>
        <article set:html={truncatedHtml} />
    </div>
</section>

<style lang="scss">
    .post-card {
        border: 1px solid var(--primary-smoke);
        display: grid;
        grid-template-rows: 13rem 1fr;

        .post-card-img {
            a {
                display: block;
                height: 100%;

                img {
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                }
            }
        }

        .post-card-date {
            font-size: 0.9rem;
        }

        .post-card-info {
            padding: 1rem;
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            overflow: hidden;

            h3 {
                min-height: 1.7rem;
                line-height: 22px;
                font-weight: 600;
                color: var(--primary-green);
                text-overflow: ellipsis;
                width: 100%;
                display: -webkit-box;
                -webkit-line-clamp: 4;
                -webkit-box-orient: vertical;
                overflow: hidden;

                @media (max-width: 768px) {
                    -webkit-line-clamp: 10;
                }
            }

            article {
            }
        }
    }
</style>
