---
import type { BlogPost } from "../../lib/contentful";
import { type Entry, type Asset } from "contentful";

import { documentToHtmlString } from "@contentful/rich-text-html-renderer";
import { MARKS } from '@contentful/rich-text-types';


interface Props {
    post: Entry<BlogPost, undefined, string>;
}

const { post } = Astro.props;
const image = post.fields.image as Asset;

---

<section class="post-card">
    <div class="post-card-img">
        <a href={`blog/posts/${post.fields.slug}`}>
            <img src={`https:${image.fields.file.url}?w=500`} alt="" />
        </a>
    </div>
    <div class="post-card-info">
        <h3>{post.fields.title.toLocaleUpperCase()}</h3>
        <p class="post-card-date">{new Date(post.fields.date).toLocaleDateString("es-ES")}</p>
        <article set:html={documentToHtmlString(post.fields.content)} />
    </div>

    {
        /* {
        item.fields.tags.map(tag => (
            <span>
            # {tag}
            </span>
        ))
    } */
    }
</section>

<style lang="scss">
    .post-card {
        border: 1px solid #d2d2d2;
        max-width: 23rem;
        display: flex;
        flex-direction: column;

        .post-card-img {
            a {
                display: block;
                img {
                    width: 100%;
                    height: auto;
                    object-fit: cover;
                }
            }
        }

        .post-card-date {
            font-size: 0.9rem;
        }

        .post-card-info {
            padding: 1rem;
            display: flex;
            flex-direction: column;
            gap: 0.5rem;

            h3 {
                line-height: 22px;
                font-weight: 600;
                color: var(--primary-green);
                text-overflow: ellipsis;
                width: 100%;
                display: -webkit-box;
                -webkit-line-clamp: 4;
                -webkit-box-orient: vertical;
                overflow: hidden;
            }

            article {
                text-overflow: ellipsis;
                width: 100%;
                display: -webkit-box;
                -webkit-line-clamp: 4;
                -webkit-box-orient: vertical;
                overflow: hidden;
                p {
                    color: red;
                    font-weight: 400 !important;
                }
            }

        }
    }
</style>
