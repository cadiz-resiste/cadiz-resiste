---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="CÃ¡diz Resiste | Web" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/cadiz-resiste/favicon.svg" />
    <title>{title}</title>
  </head>
  <body
    class="flex flex-col justify-between min-h-screen bg-background-green text-white"
