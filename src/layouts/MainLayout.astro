---
import Header from "../components/Header.astro";
import CadizSkyLineIcon from "../components/Icons/CadizSkyLineIcon.astro";
import "../styles/common.scss";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Cádiz Resiste | Web" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<!-- <meta name="generator" content={Astro.generator} /> -->
		<title>{title}</title>
	</head>
	<body>
		<div class="main-container">
			<div class="welcome-component fluid-container">
				<CadizSkyLineIcon />

				<div class="welcome-links">
					<button id="welcome-butoon">¡Conócenos!</button>
				</div>
			</div>
			<Header />
			<slot />
			<!-- <Footer /> -->
		</div>
	</body>
</html>

<style lang="scss">

	.welcome-component {
		display: flex;
		flex-direction: column;
		justify-content: center;
		position: relative;
		height: 100vh;
		gap: 1rem;
		background-color: var(--primary-green);

		.welcome-links {
			margin-top: 2.5rem;
			color: white;
			display: flex;
			flex-direction: column;
			align-items: center;
			gap: 1.5rem;
			text-align: center;

			button {
				width: 100%;
				max-width: 400px;
				font-weight: 500;
			}
		}
	}

</style>
